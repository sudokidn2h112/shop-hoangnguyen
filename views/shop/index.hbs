<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
    <div class="alert alert-success" id="success" {{#if noMessage}}hidden{{/if}}>
      {{successMsg}}
    </div>
  </div>
</div>

  <style>
    #wrapper{margin: auto; padding:10px}
    #advertisement{text-align: center; padding-bottom: 10px}
  </style>
  <script>
    var socket = io();
    socket.on('server-send-data', function (data) {
      var _adv = "<a href='"+data.link+"' ><img src='images/"+data.hinh+"' width=800 height=250> </a>";
      $('#advertisement').html(_adv);
      });
    $(document).ready(function () {

    });
  </script>
  <div id="wrapper">
    {{# each products}}
    <div id="advertisement"></div>
    <div class="row">
    {{# each this}}
      <div class="col-xs-6 col-md-4">
        <div class="thumbnail">
          <img src="{{this.imagePath}}" alt="..." class="img-responsive">
          <div class="caption">
            <h3>{{this.title}}</h3>
            <p class="description">{{this.description}}</p>
            <div class="clearfix">
              <div class="price pull-left">${{this.price}}</div>
              <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Add to Shopping Cart</a>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
    </div>
    {{/each}}
  </div>
